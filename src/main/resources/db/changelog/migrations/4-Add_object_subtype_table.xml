<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
  objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="2-Add_ac_subtype_table" context="schema-change" author="ganx">
    <createTable tableName="object_subtype">
		<column autoIncrement="true" name="id" type="SERIAL">
		    <constraints primaryKey="true" primaryKeyName="pk_ac_subtype_id"/>
		</column>
		<column name="dc_type" type="dctype">
			<constraints nullable="false" />
		</column>		
		<column name="ac_subtype" type="VARCHAR(50)">
		    <constraints nullable="false" unique="true" />
		</column>
		<column name="uuid" type="uuid">
		    <constraints nullable="false" unique="true" />
		</column>
			
	</createTable>
	
	<addUniqueConstraint columnNames="dc_type, ac_subtype" constraintName="unique_dctype_acsubtype_combination_per_object" 
		tableName="object_subtype"/>  
  </changeSet>
</databaseChangeLog>